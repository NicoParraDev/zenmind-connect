# Django Settings
# IMPORTANTE: SECRET_KEY es OBLIGATORIO - no puede estar vacío
# Genera uno con: python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-with-django-admin-startproject

# DEBUG: Por defecto False para seguridad. Solo True en desarrollo local.
DEBUG=False

ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.oracle
DB_NAME=127.0.0.1:1521/xe
DB_USER=ZenMindConnect_mente
DB_PASSWORD=your-database-password

# Email Configuration
# IMPORTANTE: EMAIL_HOST_USER y EMAIL_HOST_PASSWORD son OBLIGATORIOS - no pueden estar vacíos
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@hotmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Static Files
STATIC_URL=static/
STATIC_ROOT=staticfiles/

# Agora Video Call Configuration
# Obtener credenciales en: https://console.agora.io/
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

